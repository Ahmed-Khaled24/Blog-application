    <body>
        <div class="app">
            <%- include('./partials/guest-nav.html') %>
            <div class="form_">
                <h1>Login</h1>
                <form action="/login" method="post">
                    <input type="text" placeholder="username" class="form-control" name="username" required="true">
                    <input type="password" placeholder="password" class="form-control" name="password" required="true">
                    <button type="submit" class="btn btn-dark">Login</button>
                </form>
                <p>Don't have an account? <a href="/register"> Sign up </a></p>

                <% if(notes) { %>
                    <p class="login-register-notes"> <%= notes %></p>
                <% } %>
                
            </div>
        </div>
