    <body>
    <div class="app">
        <%- include('./partials/logged-in-nav.html') %>

        <div class="compose">
            <form>
                <div class="compose-section">
                    <label for="title" class="form-label">Post title:</label>
                    <input type="text" class="form-control" id="title" name="title" required="true"> 
                </div>  
                <div class="compose-section">
                    <label for="body" class="form-label">Post body:</label>
                    <textarea class="form-control" id="body" rows="6" name="body" required="true"></textarea>
                </div>
                <div class="compose-section">
                    <label for="image" class="form-label">Post photo:</label>
                    <input type="file" accept="image/*" id="image">
                </div>
                <button type="submit" class="btn btn-success" id="submit-btn"> Add </button>
            </form>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/browser-image-compression/2.0.0/browser-image-compression.min.js" 
